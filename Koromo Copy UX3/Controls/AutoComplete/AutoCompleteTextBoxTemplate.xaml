                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Koromo_Copy_UX3.Controls.AutoComplete">
    <Style TargetType="{x:Type local:AutoCompleteTextBox}">
        <!--<Setter Property="Template">
